<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondMainactivity">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_keyboard_return_24"

        />

 <ImageView
     android:id="@+id/image_accelerometer"
     android:layout_width="200dp"
     android:layout_height="200dp" android:src="@drawable/ic_launcher_background"
     android:layout_centerInParent="true"
/>

    <TextView
        android:id="@+id/xValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/image_accelerometer"
        android:layout_centerInParent="true"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/yValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/xValue"
        android:layout_centerInParent="true"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/zValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/yValue"
        android:layout_centerInParent="true"
        android:textColor="@color/black"/>





</RelativeLayout>